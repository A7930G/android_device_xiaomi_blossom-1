---
 res/xml/bliss_settings_lockscreen_clock.xml | 30 +++++++++++++++++++++
 1 file changed, 30 insertions(+)

diff --git a/res/xml/bliss_settings_lockscreen_clock.xml b/res/xml/bliss_settings_lockscreen_clock.xml
index 55dd22d..79d23e1 100644
--- a/res/xml/bliss_settings_lockscreen_clock.xml
+++ b/res/xml/bliss_settings_lockscreen_clock.xml
@@ -17,6 +17,36 @@
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:title="@string/theme_customization_clock_font_title" >
 
+    <com.bliss.support.preferences.SystemSettingSeekBarPreference
+        android:key="kg_custom_clock_top_margin"
+        android:icon="@drawable/ic_lock_clock"
+        android:title="@string/kg_custom_clock_top_margin_title"
+        android:max="500"
+        settings:min="80"
+        settings:interval="1"
+        android:defaultValue="280"
+        settings:units="dp" />
+
+    <com.bliss.support.preferences.SystemSettingSeekBarPreference
+        android:key="kg_small_clock_text_size"
+        android:icon="@drawable/ic_font"
+        android:title="@string/kg_small_clock_text_size_title"
+        android:max="100"
+        settings:min="25"
+        settings:interval="1"
+        android:defaultValue="86"
+        settings:units="dp" />
+
+    <com.bliss.support.preferences.SystemSettingSeekBarPreference
+        android:key="kg_large_clock_text_size"
+        android:icon="@drawable/ic_font"
+        android:title="@string/kg_big_clock_text_size_title"
+        android:max="180"
+        settings:min="25"
+        settings:interval="1"
+        android:defaultValue="180"
+        settings:units="dp" />
+
     <com.bliss.support.preferences.SystemSettingListPreference
         android:key="clock_use_custom_format"
         android:icon="@drawable/ic_lock_clock"
